@{
    Layout = "_Layout";
    ViewData["Title"] = "Loan Calculator";
}

<h1 class="pt-4">График платежей</h1>

<table class="table table-dark table-hover my-4 table-responsive">
    <thead class="thead-light">
        <tr>
            <th scope="col">Номер платежа</th>
            <th scope="col">Дата платежа</th>
            <th scope="col">Сумма платежа</th>
            <th scope="col">Основной платёж</th>
            <th scope="col">Платёж по процентам</th>
            <th scope="col">Оставшаяся задолженность</th>
        </tr>
    </thead>
    @{
        int i = 1;
        foreach (PaymentViewModel payment in ViewBag.Schedule)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@payment.PaymentDate.ToShortDateString()</td>
                <td>@payment.PaymentAmount.ToString("c")</td>
                <td>@payment.MainPayment.ToString("c")</td>
                <td>@payment.InterestPayment.ToString("c")</td>
                <td>@payment.RemainingDebt.ToString("c")</td>
            </tr>
        }
    }
    <tr>
        <td scope="col">Итого:</td>
        <td></td>
        <td scope="col">@ViewBag.AllPayment.ToString("c")</td>
        <td scope="col">@ViewBag.AllMainPayment.ToString("c")</td>
        <td scope="col">@ViewBag.AllInterestPayment.ToString("c")</td>
        <td></td>
    </tr>
</table>


